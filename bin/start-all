#!/bin/bash

BIN_DIR="$(dirname $0)"

# Start the stores.
"${BIN_DIR}/run-in-xterm" "Store" "${BIN_DIR}/start-store store" &

# Wait for the stores to start up.
echo "Press ENTER when the stores are ready."
echo "You should see console prompts in the window: 'store>'"
read -r

# Start the workers.
"${BIN_DIR}/run-in-xterm" "User webapp worker" \
  "${BIN_DIR}/start-worker user" &



